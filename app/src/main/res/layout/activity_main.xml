<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_red"
        android:layout_width="249dp"
        android:layout_height="55dp"
        android:text="Red"
        android:textSize="24sp"
        app:backgroundTint="#872121"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112"
        app:strokeColor="#040404"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="249dp"
        android:layout_height="55dp"
        android:text="Reset"
        android:textColor="#000000"
        android:textSize="24sp"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_green"
        app:layout_constraintVertical_bias="0.563"
        app:strokeColor="#040404"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/btn_green"
        android:layout_width="249dp"
        android:layout_height="55dp"
        android:text="Green"
        android:textSize="24sp"
        app:backgroundTint="#528154"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_blue"
        app:layout_constraintVertical_bias="0.06"
        app:strokeColor="#040404"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/btn_yellow"
        android:layout_width="249dp"
        android:layout_height="55dp"
        android:text="Yellow"
        android:textSize="24sp"
        app:backgroundTint="#DAAC23"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_green"
        app:layout_constraintVertical_bias="0.289"
        app:strokeColor="#040404"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/btn_violet"
        android:layout_width="249dp"
        android:layout_height="55dp"
        android:text="Violet"
        android:textSize="24sp"
        app:backgroundTint="#6D5598"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_blue"
        app:layout_constraintVertical_bias="0.236"
        app:strokeColor="#040404"
        app:strokeWidth="4dp" />

    <Button
        android:id="@+id/btn_blue"
        android:layout_width="249dp"
        android:layout_height="55dp"
        android:text="Blue"
        android:textSize="24sp"
        app:backgroundTint="#1B84B3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_red"
        app:layout_constraintVertical_bias="0.045"
        app:strokeColor="#040404"
        app:strokeWidth="4dp" />

</androidx.constraintlayout.widget.ConstraintLayout>